#!/usr/bin/env node

// Run testem-multi.
var multi = require('../lib/testem-multi');
multi.exec();
multi.on('exit', function(result, data) {
  console.log(result);
  if (data.fail > 0) {
    exit(1);
  } else {
    exit(0);
  }
});

function exit (code) {
  process.nextTick(function () {
    process.exit(code);
  });
}